<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
        
        For older devices using actionbarsherlock as the actionbar. 
        actionBarStyle does not have the 'android:' prefix, as older android version doesn't have it
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/Widget.RowanTheme.ActionBar</item>
        <item name="android:editTextStyle">@style/RowanEditText</item>
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        
    </style>
	<!-- ____________________________ -->
    <!-- Styles for views used in the application -->
    
    <!-- Action bar -->
	<style name="Widget.RowanTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
    	<item name="android:background">@drawable/actionbar_background</item>
    	<item name="titleTextStyle">@style/RowanTheme.ActionBar.TitleTextStyle</item>
    	<item name="background">#ff3399CC</item>
	</style>

	<!-- Action bar text -->
	<style name="RowanTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/rowanBrown</item>
  	</style>
  
	<!--  EditText theme -->
    <style name="RowanEditText" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/edit_text_holo_light</item>
	  <item name="android:inputType">text</item>
    </style>
    
    <!-- View Pager Indicator theme -->
    <style name="CustomTitlePageIndicator">
        <item name="footerColor">#ffcc0000</item>
    </style>

</resources>