<resources>
    
    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/Widget.RowanTheme.ActionBar</item>
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_rowan_brown</item>
    </style>
    
    <!-- Action bar [overwrite old style] uses 'android:' prefix for actionbar titleTextStyle-->
	<style name="Widget.RowanTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
    	<item name="android:background">@drawable/actionbar_background</item>
    	<item name="android:titleTextStyle">@style/RowanTheme.ActionBar.TitleTextStyle</item>
    	<item name="background">#ff3399CC</item>
	</style>

</resources>